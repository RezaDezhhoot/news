<div class="row mt-0 mt-lg-8">
    <div class="col-12">
        <div class="card card-custom gutter-b example example-compact">
            <form action="/admin/channels/store" method="post" enctype="multipart/form-data">
                <%- include('../../includes/admin/validation-errors') %>
                <div class="card-header">
                    <h3 class="card-title"><%=page_title%></h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="title"><%= __('admin.fields.title') %>*</label>
                            <input value="<%= oldData?.title %>" type="text" name="title" id="title" class="form-control">
                        </div>
                        <div class="form-group col-6">
                            <label for="title"><%= __('admin.fields.sub_title') %></label>
                            <input value="<%= oldData?.sub_title %>" type="text" name="sub_title" id="sub_title" class="form-control">
                        </div>
                        <div class="form-group col-12">
                            <label for="title"><%= __('admin.fields.color') %></label>
                            <input value="<%= oldData?.color %>" type="color" name="color" id="color" class="form-control">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="status"><%= __('admin.fields.status') %>*</label>
                            <select class="form-control" name="status" id="status">
                                <option value=""></option>
                                <option value="1" <%= ((oldData?.status) == true) ? 'selected': '' %> >  <%= __('admin.statuses.published') %></option>
                                <option value="0" <%= (oldData?.status) == false ? 'selected': '' %> > <%= __('admin.statuses.draft') %></option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="customFile"><%= __('admin.fields.image') %></label>
                            <div></div>
                            <div class="custom-file">
                                <input type="file" name="image" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary mr-2"><%= __('admin.actions.save') %> <i class="fa fa-save"></i></button>
                    <a href="/admin/channels"  class="btn btn-secondary"><%= __('admin.actions.cancel') %> <i class="fa fa-times"></i></a>
                </div>
            </form>
        </div>
    </div>
</div>