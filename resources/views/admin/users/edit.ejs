<div class="row mt-0 mt-lg-8">
    <div class="col-12">
        <div class="card card-custom gutter-b example example-compact">
            <form action="/admin/update/<%= user.id%>" method="post" enctype="multipart/form-data">
                <%- include('../../includes/admin/validation-errors') %>
                <div class="card-header">
                    <h3 class="card-title"><%=page_title%></h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="full_name"> <%= __('admin.fields.name') %>*</label>
                            <input value="<%= oldData?.full_name ?? user.full_name%>" type="text" name="full_name" id="full_name" class="form-control">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="full_name"> <%= __('admin.fields.city') %>*</label>
                            <input value="<%= oldData?.city ?? user.city%>" type="text" name="city" id="city" class="form-control">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="full_name"> <%= __('admin.fields.phone') %>*</label>
                            <input disabled value="<%= oldData?.phone ?? user.phone%>" type="text" name="phone" id="phone" class="form-control">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="full_name"> <%= __('admin.fields.role') %>*</label>
                            <select <%= (user?.role) === 'administrator' ? 'disabled': '' %> class="form-control" name="role" id="role">
                                <option value=""></option>
                                <option value="admin" <%= (oldData?.role ?? user?.role) === 'admin' ? 'selected': '' %> >admin</option>
                                <% if(user?.role === 'administrator') { %>
                                    <option selected >administrator</option>
                                <% } %>
                                <option value="user" <%= (oldData?.role ?? user?.role) === 'user' ? 'selected': '' %> >user</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="full_name"> <%= __('admin.fields.status') %>*</label>
                            <select class="form-control" name="status" id="status">
                                <option value=""></option>
                                <option value="1" <%= ((oldData?.status ?? user?.status) == true) ? 'selected': '' %> >فعال</option>
                                <option value="0" <%= (oldData?.status ?? user?.status) == false ? 'selected': '' %> >غیر فعال</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="full_name"> <%= __('admin.fields.password') %>*</label>
                            <input value="" type="password" name="password" id="password" class="form-control">
                            <small class="text-info"><%= __('admin.general.messages.info.empty_password') %></small>
                        </div>
                        <div class="form-group col-12">
                            <label for="full_name"> <%= __('admin.fields.image') %>*</label>
                            <div class="custom-file">
                                <input type="file" name="image" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                            <% if (user.image) {%>
                            <div class="symbol symbol-40 symbol-lg-80 mt-4">
                                <img src="<%= asset(`${USER_PROFILE_IMAGE_FOLDER}/${user.image}`)%>"  class="mr-1 mb-1 imglist"
                                     style="border-radius: 5px" />
                            </div>
                            <%}%>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary mr-2"><%= __('admin.actions.save') %> <i class="fa fa-save"></i></button>
                    <a href="/admin"  class="btn btn-secondary"><%= __('admin.actions.cancel') %> <i class="fa fa-times"></i></a>
                </div>
            </form>
        </div>
    </div>
</div>